<div class="d-flex flex-wrap">
    {{#each data}}
    <div class="card text-white bg-dark m-3"
        style="min-width: 15rem; min-height: 10rem; max-width: 20rem; max-height: 20rem;">
        <div class="card-header">{{this.title}}</div>
        <div class="card-body">
            <p class="card-text text-break">{{this.description}}</p>
        </div>
        <span class="badge bg-secondary text-success">{{this.date}}
            <a class="btn badge rounded-pill bg-danger m-2" href="/deletePost/{{this.postId}}">Delete</a>
            <a class="btn badge rounded-pill bg-primary" href="/updatePost/{{this.postId}}">Edit</a>
        </span>
    </div>
    {{else}}
    <div class="alert alert-dismissible alert-danger mt-5">
        <strong>No data</strong>
    </div>
    {{/each}}
</div>